{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "copy-config": "node ./lib/copy-config",
    "lint": "lerna exec --bail=false --ignore @origami/tslint-config -- tslint -t stylish --project ./",
    "lint:fix": "yarn lint --fix",
    "build": "lerna run build",
    "postbuild": "leasot -x --reporter vscode --ignore 'packages/*/node_modules/**/*'  'packages/**/*.ts' > TODO.md",
    "watch": "lerna run build -- -w",
    "test": "LOG_LEVEL=none jest --notify",
    "test:watch": "yarn test --watch",
    "coverage": "yarn test --coverage --silent",
    "visualize-deps": "madge --image graph.svg --exclude '(__tests__|.d.ts)' --extensions ts packages/; open graph.svg",
    "scripts:copy": "ts-node scripts/copy-config.ts",
    "scripts:sync": "ts-node scripts/sync-versions.ts",
    "scripts:publish": "ts-node scripts/publish.ts",
    "publish:prerelease": "yarn build && lerna version prerelease --conventional-commits && yarn scripts:publish",
    "publish:patch": "yarn build lerna version patch --conventional-commits && yarn scripts:publish",
    "document": "ts-node lib/document.ts"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^7.1.2",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.3",
    "@types/node-sass": "^3.10.32",
    "commitlint": "^7.2.1",
    "ejs": "^2.6.1",
    "execa": "^1.0.0",
    "get-port": "^4.0.0",
    "handlebars": "^4.0.12",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "leasot": "^6.6.2",
    "lerna": "^3.4.3",
    "listr": "^0.14.3",
    "madge": "^3.3.0",
    "node-sass": "^4.10.0",
    "origami-plugin-auth": "^1.0.2",
    "pug": "^2.0.3",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typedoc": "^0.13.0",
    "typescript": "^3.1.6"
  },
  "workspaces": [
    "packages/*"
  ]
}
