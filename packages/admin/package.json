  "scripts": {
    "clean": "rm -rf dist/; mkdir dist",
    "gzip": "gzip-all 'dist/**/*.*(js|css|svg|png|jpg|jpeg)'",
    "build:ts": "tsc -p .",
    "build:rollup": "rollup -c",
    "build:sass": "sass-render src/components/**/*.scss --suffix=-css.ts",
    "build": "yarn clean; yarn build:sass; yarn build:ts; yarn build:rollup;",
    "build:prod": "yarn clean; yarn build:sass; NODE_ENV=production yarn build:rollup; yarn gzip",
    "watch:ts": "yarn build:ts -w",
    "watch:rollup": "yarn build:rollup -w",
    "watch:sass": "yarn build:sass -w",
    "watch": "yarn watch:ts & yarn watch:rollup & yarn watch:sass",
    "serve": "http-server-spa build/",
    "start": "yarn watch & yarn watch:sass & yarn serve"
  },
  "devDependencies": {
    "@origami/core-lib": "0.0.3-alpha.11",
    "@polymer/lit-element": "^0.6.2",
