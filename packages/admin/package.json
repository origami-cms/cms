    "fuse.js": "^3.2.1",
    "gzip-all": "^1.0.0",
    "http-status-codes": "^1.3.0",
    "lit-html": "^0.12.0",
    "lodash": "^4.17.10",
    "origami-rollup-config": "^1.0.0",
    "origami-zen": "^0.3.20-alpha.9",
    "path-to-regexp": "^2.2.1",
    "pluralize": "^7.0.0",
    "pwa-helpers": "^0.8.2",
    "redux": "^4.0.0",
    "redux-injector": "^0.1.0",
    "redux-thunk": "^2.3.0",
